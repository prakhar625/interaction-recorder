{
  "description": "Interaction Recorder plugin hooks for audio validation and environment setup",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/load-env.sh",
            "timeout": 5,
            "statusMessage": "Loading .env for interaction-recorder..."
          }
        ]
      }
    ]
  }
}
